{
  "main": "dist/index",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es7",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": [
      "jest"
    ],
    "rootDirs": [
      "src"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types",
    ]
  },
  "include": [
    "src/**/*", "src/__tests__/*"
  ]
}
